<!doctype html>
<!--[if lte IE 8]>     <html class="lt-ie9"> <![endif]-->
<!--[if gt IE 8]><!--> <html class=""> <!--<![endif]-->
<head>
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
  <meta name="viewport" content="width=device-width" />
  <meta name="description" content="Cascading grid layout library" />

  <title>Isotope{{#unless page.is_homepage}} {{page.title}}{{/unless}}</title>

  {{#if isDev}}
    <!-- DEV MODE - including each .css file -->
    {{#each site.css}}
      <link rel="stylesheet" href="{{this}}" />
    {{/each}}
  {{else}}
    {{! in production, just include concat CSS }}
    <link rel="stylesheet" href="css/isotope-docs.css" />
  {{/if}}

  {{! Twitter Cards }}
  <meta name="twitter:card" content="summary" />
  <meta name="twitter:site" content="@metafizzyco" />
  <meta name="twitter:url" content="http://isotope.metafizzy.co/{{basename}}.html" />
  <meta name="twitter:title" content="Isotope{{#unless page.is_homepage}} {{page.title}}{{/unless}}" />
  <meta name="twitter:description" content="filtering &amp; sorting magical layout library" />

  {{#unless isDev}}
    <!-- Mint Analytics - Remove this if you copy/pasted this page -->
    <!-- <script src="http://desandro.com/mint/?js"></script> -->
  {{/unless}}

</head>
<body class="{{basename}}-page" data-page="{{basename}}">

  <div id="top-banner">
    <div class="primary-content">
      <h2>Isotope v2 beta</h2>
      <p>
        <a href="appendix.html#upgrading-from-v1">Changes from Isotope v1.</a>
        <a href="https://github.com/desandro/isotope/issues/new">Report any issues with Isotope v2.</a>
        <i>Thanks for being brave!</i>
      </p>
    </div>
  </div>

  <div id="site-nav">
    <h1><a href=".">Isotope</a></h1>
    <ol>
      <li class="nav-filtering"><a href="filtering.html">Filtering</a></li>
      <li class="nav-sorting"><a href="sorting.html">Sorting</a></li>
      <li class="nav-layout-modes">
        <a href="layout-modes.html">Layout modes</a>
        <ul>
          <li class="nav-masonry"><a href="masonry.html">masonry</a></li>
          <li class="nav-fitrows"><a href="fitrows.html">fitRows</a></li>
          <li class="nav-cellsbyrow"><a href="cellsbyrow.html">cellsByRow</a></li>
          <li class="nav-vertical"><a href="vertical.html">vertical</a></li>
          <li class="nav-masonryhorizontal"><a href="masonryhorizontal.html">masonryHorizontal</a></li>
          <li class="nav-fitcolumns"><a href="fitcolumns.html">fitColumns</a></li>
          <li class="nav-cellsbycolumn"><a href="cellsbycolumn.html">cellsByColumn</a></li>
          <li class="nav-horizontal"><a href="horizontal.html">horizontal</a></li>
        </ul>
      </li>
      <li class="nav-options"><a href="options.html">Options</a></li>
      <li class="nav-methods"><a href="methods.html">Methods</a></li>
      <li class="nav-events"><a href="events.html">Events</a></li>
      <li class="nav-license"><a href="license.html">License</a></li>
      <li class="nav-appendix"><a href="appendix.html">Appendix</a></li>
      <li class="nav-faq"><a href="faq.html">FAQ</a></li>
    </ol>
  </div>

  {{! display hero only on index page }}
  {{#if page.is_homepage}}
    {{>hero}}
  {{/if}}

  <div id="content">

    <div class="primary-content">
      {{#unless page.is_homepage}}
        <h1>{{page.title}}</h1>
        {{/unless}}

      {{! page nav }}
      {{#if page.nav}}
        <ul id="page-nav">
          {{#each page.nav}}
            <li><a href="#{{slug this}}">{{this}}</a></li>
          {{/each}}
        </ul>
      {{/if}}
    </div>

    {{! all page content goes here }}
    {{{ content }}}

  </div>

  <div id="footer">
    <div class="footer-content">
      {{! logo is broken up so font renders just the logo in M }}
      <a class="metafizzy-logo" href="http://metafizzy.co">M<span class="etafizzy">etafizzy</span></a>
      <span class="copyright">&copy; 2013</span>
    </div>
  </div>

<!-- Isotope does NOT require jQuery. But it does make things easier -->
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
<script>window.jQuery || document.write('<script src="bower_components/jquery/jquery.min.js"><\/script>')</script>

{{#if isDev}}
  <!-- DEV MODE - including each .js file -->
  {{#each site.js}}
    <script src="{{this}}"></script>
  {{/each}}
{{else}}
  {{! in production, just include concat/minified js }}
  <script src="js/isotope-docs.min.js"></script>
{{/if}}

{{#unless isDev}}
  <script src="https://www.simplegoods.co/assets/embed.js"></script>
